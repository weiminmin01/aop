<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">


    <bean id="userdao" class="cn.springdemo.dao.impl.UserDaoImpl"></bean>
    <bean id="service" class="cn.springdemo.service.impl.UserServiceImpl" p:dao-ref="userdao">
        <!--<property name="dao" ref="dao"></property>-->
       <!-- <constructor-arg index="0" type="cn.springdemo.dao.UserDao">
            <ref bean="dao" />
        </constructor-arg>
        <constructor-arg index="1" type="java.lang.Integer">
            <value> 5 </value>
        </constructor-arg>-->
    </bean>
    <!-- 声明增强方法所在的Bean -->
    <bean id="theLogger" class="cn.springdemo.aop.UserServiceLogger"></bean>
    <!-- 配置切面 -->
    <aop:config>
        <!-- 定义切入点 -->
        <aop:pointcut id="pointcut"
                      expression="execution(public void addNewUser(cn.springdemo.entity.User))" />
        <!-- 引用包含增强方法的Bean -->
        <aop:aspect ref="theLogger">
            <aop:before method="before" pointcut-ref="pointcut"></aop:before>
            <aop:after-returning method="afterReturning"
                                 pointcut-ref="pointcut" returning="result" />
        </aop:aspect>
    </aop:config>

    <!-- user对象的注入 -->
    <bean id="user1" class="cn.springdemo.entity.User" p:id="1" p:username="张三" p:password="12345">
    </bean>


    <bean id="demo" class="cn.springdemo.test.Demo" >
        <property name="specialCharacter1" >
            <!-- <![CDATA[]] 原封不动的输出其中的内容-->
            <value><![CDATA[ <> 呵呵呵 ]]> </value>
        </property>
        <property name="specialCharacter2" >
            <value> b &amp; G</value>
        </property>

        <property name="user">
            <bean class="cn.springdemo.entity.User">
                <property name="id" >
                    <value>1</value>
                </property>
                <property name="username" >
                    <value> root </value>
                </property>
                <property name="password" >
                    <value> root </value>
                </property>
                <property name="email" >
                    <value> 110@jincha.gov </value>
                </property>

            </bean>
        </property>

        <property name="list" >
            <list>
                <value> 抽烟 </value>
                <value> 喝酒 </value>
                <value> 烫头 </value>
            </list>
        </property>

        <property name="array" >
            <list>
                <value> 1 </value>
                <value> 2 </value>
                <value> 3 </value>
            </list>
        </property>

        <property name="set" >
            <set>
                <value> 白色 </value>
                <value> 黑色 </value>
                <value> 灰色 </value>
            </set>
        </property>

        <property name="map" >
            <map>
                <entry>  <!--实例-->
                    <key> <value> 1 </value></key>
                    <value> 黑色 </value>
                </entry>
                <entry>  <!--实例-->
                    <key> <value> 2 </value></key>
                    <value> 白色 </value>
                </entry>

            </map>
        </property>

        <property name="props" >
            <props>
                <prop key="userName"> root </prop>
                <prop key="password"> root </prop>
            </props>
        </property>

        <property name="emptyValue" >
            <value></value>   <!-- '' -->
        </property>
        <property name="nullValue" >
            <null></null>  <!--  null -->
        </property>



    </bean>



</beans>